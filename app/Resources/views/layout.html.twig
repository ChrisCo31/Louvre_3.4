<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Layout.Base.Title{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-inverse">
                <div class="container">
                    <div class="navbar-header">
                         <a class="navbar-brand" href="#">Mus√©e du Louvre</a>

                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" >
                                    {{ 'Layout.Base.Langue'|trans }}
                                    <span class="caret"></span>
                                </button>
                                
                                <ul class="dropdown-menu"  role="menu" aria-labelledby="dLabel" style="display: inline-block;">
                                    <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}" >Fr</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}" >En</a></li>
                                </ul>
                            </div>
                        </ul>
                            <ul class="nav navbar-nav navbar-nav navbar-right">
                                <li><a href="{{ path('booking_organisation') }}">{{ 'Layout.Base.Billet'|trans }}</a></li>
                                <li><a href="{{ path('booking_payment') }}">{{ 'Layout.Base.Exposition'|trans }}</a></li>
                            </ul>
                    </div>
                </div>
            </nav>
            <div class="row">
                <div id="content" class="col-md-9">
                    {% block booking_body %}
                    {% endblock %}
                </div>
            </div>
            <hr>
            <footer>
                <p>{{ 'Layout.Base.Footer'|trans }}</p>
            </footer>
        </div>
    {% block javascripts %}
    {% endblock %}
    </body>
</html>