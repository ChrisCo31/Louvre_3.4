{% block form1 %}
    <div class="row">
            <div class="row">
                <div class="col-md-offset-1 col-md-9 col-md-offset-2">
                    <hr>
                </div>
            </div>
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-offset-1 col-lg-4 col-lg-offset-7">
                    <p> {{ form_label(form.nbTicket) }}
                        {{ form_widget(form.nbTicket) }}
                </div>
                <div class="col-lg-offset-1 col-lg-4 col-lg-offset-7">
                    <p>
                        {{ form_label(form.duration) }}
                        {{ form_widget(form.duration) }}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-lg-9 col-lg-offset-2">
                    <p>
                        {{ form_label(form.dateVisit) }}
                        {{ form_widget(form.dateVisit) }}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-lg-9 col-lg-offset-2">
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-8 col-lg-4">
                    {{ form_widget(form.suivant) }}
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
    </div>
{% endblock %}